<!-- Projects Row -->
<div class="row">
    <% @products.each do |item| %>
        <% product = item.product %>
        <div class="col-md-4 portfolio-item">
            <a href="<%= detail_product_path(product) %>">
                <img class="img-responsive" src="<%= product.get_image_default %>" alt="">
            </a>
            <h3>
            <a href="#"><%= product.get_title(30) %></a>
            </h3>
            <p><%= product.get_description(50) %></p>
        </div>
    <% end %>
</div>
<!-- /.row -->
