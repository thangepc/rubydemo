<h2 class="sub-header">List categories</h2>
<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Title</th>
				<th>Parent</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @categories.each do |item| %>
			<tr>
				<td><%= item.id %></td>
				<td><%= item.title %></td>
				<td>
					<% if parent = Category.where(:id => item.parent_id).first %>
						<%= parent.title %>
					<% else %>
						<%= '-' %>
					<% end %>
				</td>
				<td>
					<%= link_to "Edit", show_category_path(item) %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>