<% if flash[:success] %>
	<div class="notice"></div>
	<div class="panel panel-default" >
	  <div class="panel-body">
	    <%= flash[:success] %>
	  </div>
	</div>
<% end %>
<% if flash[:error] %>
	<div class="notice"></div>
	<div class="panel panel-danger" >
	  <div class="panel-body">
	    <%= flash[:error] %>
	  </div>
	</div>
<% end %>
<h2 class="sub-header">List categories</h2>
<%= link_to "Add new", create_category_path %>
<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Title</th>
				<th>Parent</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @categories.each do |item| %>
			<tr>
				<td><%= item.id %></td>
				<td><%= item.title %></td>
				<td>
					<% if parent = Category.where(:id => item.parent_id).first %>
						<%= parent.title %>
					<% else %>
						<%= '-' %>
					<% end %>
				</td>
				<td>
					<%= link_to "Edit", edit_category_path(item), class: "btn btn-success" %>
					<%= link_to "Delete", delete_category_path(item), method: :delete,
              data: { confirm: "Are you sure?", url: delete_category_path(item) }, class: "btn btn-danger delete-item" %>

				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

