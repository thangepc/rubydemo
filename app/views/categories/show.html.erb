<h2 class="sub-header">Detail category</h2>

	<%= form_for @category, url: {action: "show"}, html: {class: "form-horizontal"} do |item| %>
		<div class="form-group">
			<%= item.label :title %>
			<%= item.text_field :title, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= item.label :image %>
			<%= image_tag :image %>
		</div>
		<div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		    	<%= link_to "Edit", edit_category_path(@category) %>
		    </div>
		  </div>
	<% end %>