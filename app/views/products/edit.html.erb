<h2 class="sub-header"><%= t('products.heading-update') %></h2>
<%= form_for @product, url: {action: "edit"}, html: {class: "form-horizontal", multipart: true} do |item|  %>
<form class="form-horizontal">
    <div class="form-group">
        <%= item.label :title, for: "input-title", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
            <%= item.text_field :title, class: "form-control", id: "input-title", placeholder: "Title" %>
            <% if @product.errors.include?(:title)%>
                <ul>
                    <% @product.errors.full_messages_for(:title).each do |err| %>
                        <li><span id="helpBlock" class="text-danger"><%= err %></span></li>
                    <% end %>
                </ul>
            <% end %>
        </div>
    </div>
    <div class="form-group">
        <%= item.label :description, for: "input-description", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
            <%= item.text_area :description, class: "form-control", id: "input-description", row: "3" %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <%= image_tag item.object.image.thumb.url %>
        </div>
    </div>
    <div class="form-group">
        <%= item.label :image, for: "input-image", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
            <%= file_field(:product, :image) %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default"><%= t('general.btn-update') %></button>
            <%= link_to t('general.btn-cancel'), {controller: "products"}, class: "btn btn-danger" %>
        </div>
    </div>
</form>
<% end %>